<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".About"
    android:background="@drawable/aquablue">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="20dp"
            android:paddingBottom="55dp"
            android:paddingRight="10dp"
            android:paddingLeft="10dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Created By :"
                android:textColor="#FFF"
                android:textSize="25dp"
                android:gravity="center_horizontal"
                android:textStyle="bold"
                android:paddingBottom="15dp"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="168dp"
                android:src="@drawable/bifotoyeuh" />
            <TextView
                android:id="@+id/nama"
                android:textColor="#FFF"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name : Robi Febrianto"
                android:layout_marginTop="30dp"
                android:textSize="20dp"
                android:textStyle="italic"/>
            <TextView
                android:id="@+id/email"
                android:textColor="#FFF"
                android:textStyle="italic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email : robifebrianto33@gmail.com"
                android:layout_marginTop="10dp"
                android:textSize="20dp" />
            <TextView
                android:id="@+id/nomor"
                android:textColor="#FFF"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Instagram : @frobi9_"
                android:textStyle="italic"
                android:layout_marginTop="10dp"
                android:textSize="20dp" />
            <TextView
                android:textColor="#FFF"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bandung, 2018/06/09"
                android:textStyle="italic"
                android:layout_marginTop="10dp"
                android:textSize="20dp" />
            <TextView
                android:textColor="#FFF"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description : "
                android:textStyle="italic"
                android:layout_marginTop="10dp"
                android:textSize="20dp" />
            <TextView
                android:textColor="#FFF"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Aplikasi ini menyediakan beberapa panduan dan tata cara melaksanakan sholat sunnah yang rasul ajarkan kepada kita sebagai umat islam."
                android:textStyle="italic"
                android:layout_marginTop="10dp"
                android:textSize="20dp" />

        </LinearLayout>
</android.support.constraint.ConstraintLayout>