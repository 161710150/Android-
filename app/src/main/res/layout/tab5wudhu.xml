<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GeserWudhu"
    android:paddingTop="10dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingBottom="15dp"
    android:orientation="vertical"
    android:background="@drawable/islambck">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/sikut"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="25dp">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:textStyle="bold"
        android:textColor="#f8d44c"
        android:paddingTop="20dp"
        android:text="Doa Ketika Membasuh Tangan Kanan"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="#FFF"
        android:text="  اَللّٰهُمَّ اَعْطِنِى كِتاَبِى بِيَمِيْنِى وَحَاسِبْنِى حِسَاباً يَسِيْرًا ْ "/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:textStyle="bold"
        android:textColor="#FFF"
        android:paddingTop="15dp"
        android:text=" Allohumma A'thini kitabi biyamini wa hasibni hisaban yasiro."/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:textStyle="bold"
        android:textColor="#FFF"
        android:paddingTop="5dp"
        android:text="Artinya:
Ya Allah berikanlah kepadaku kitab amalku dari dari tangan kananku dan hisablah aku dengan penghisaban yang ringan."/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:textStyle="bold"
        android:textColor="#f8d44c"
        android:paddingTop="20dp"
        android:text="Doa Ketika Membasuh Tangan Kiri"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="#FFF"
        android:text=" اَللّٰهُمَّ لاَ تُعْطِنِى كِتاَبِى بِشِمَالِى وَلاَمِنْ وَرَاءِ ظَهْرِىْ "/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:textStyle="bold"
        android:textColor="#FFF"
        android:paddingTop="15dp"
        android:text="Allohumma Laa Ta'thini Kitabi bisyimali walaa min waro'i dzohri."/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:textStyle="bold"
        android:textColor="#FFF"
        android:paddingBottom="25dp"
        android:paddingTop="5dp"
        android:text="Artinya:
Ya Allah jangan Engkau berikan kepadaku kitab amal dari tangan kiriku atau pada belakang punggungku."/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>