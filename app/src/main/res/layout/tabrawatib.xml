<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GeserToolbar"
    android:background="@drawable/bcksunnah">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="70dp"
            android:paddingTop="15dp"
            android:paddingRight="10dp"
            android:paddingLeft="10dp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/rawatib"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="15sp"
                android:textColor="#f8d44c"
                android:textSize="20dp"
                android:textStyle="bold"
                android:text="Panduan Sholat Sunnah Rawatib"
                android:gravity="center_horizontal"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:textColor="#FFF"
                android:textSize="15dp"
                android:textStyle="bold"
                android:text="Yang dimaksud dengan shalat Rawatib adalah shalat yang mengiringi shalat fardhu, baik sebelumnya yang disebut “Qobliyah”, maupun sesudahnya yang disebut “Ba’diyah”. Mengenai hukumnya shalat rawatib adalah sunnah."/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:textColor="#FFF"
                android:textSize="15dp"
                android:textStyle="bold"
                android:text="Adapun macamnya shalat-shalat Rawatib itu ada dua macam yaitu, Sunnah Mu’akkad (sangat dianjurkan untuk mengerjakannya) dan Ghoiru Mu’akkad (tidak ditekankan untuk mengerjakannya)."/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="20dp"
                android:textColor="#f8d44c"
                android:textSize="15dp"
                android:textStyle="bold"
                android:text="Diantara Shalat Rawatib Yang Mua’akkad ialah :"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:textColor="#FFF"
                android:textSize="15dp"
                android:textStyle="bold"
                android:text="1. Dua rakaat sebelum shalat Shubuh (Qobliyah Shubuh)."/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:textColor="#FFF"
                android:textSize="15dp"
                android:textStyle="bold"
                android:text="2. Dua rakaat sebelum shalat Dzuhur (Qobliyah Dzuhur)."/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:textColor="#FFF"
                android:textSize="15dp"
                android:textStyle="bold"
                android:text="3. Dua rakaat sesudah shalat Dzuhur (Ba’diyah Dzuhur)."/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:textColor="#FFF"
                android:textSize="15dp"
                android:textStyle="bold"
                android:text="4. Dua rakaat sesudah shalat Maghrib (Ba’diyah Maghrib)."/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:textColor="#FFF"
                android:textSize="15dp"
                android:textStyle="bold"
                android:text="5. Dua rakaat sesudah shalat Isya (Ba’diyah Isya)."/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="20dp"
                android:textColor="#f8d44c"
                android:textSize="15dp"
                android:textStyle="bold"
                android:text="Adapun shalat Rawatib yang Ghoiru Mu’akkad ialah :"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:textColor="#FFF"
                android:textSize="15dp"
                android:textStyle="bold"
                android:text="1. Dua rakaat sebelum Dzuhur yang dimaksud disini, bagi yang mengerjakan shalat Qobliyah Dzuhur empat rakaat, maka dua rakaat pertama Mu’akkad dan dua rakaat yang kedua itu Ghoiru Mu’akkad."/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:textColor="#FFF"
                android:textSize="15dp"
                android:textStyle="bold"
                android:text="2. Dua rakaat sesudah shalat Dzuhur yang dimaksud disini, bagi orang yang mengerjakan shalat Ba’diyah Dzuhur empat rakaat, maka dua rakaat yang pertama itu Mu’akkad dan dua rakaat yang kedua itu Ghoiru Mu’akkad."/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:textColor="#FFF"
                android:textSize="15dp"
                android:textStyle="bold"
                android:text="3. Empat rakaat sebelum shalat Ashar (Qobliyah Ashar)."/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:textColor="#FFF"
                android:textSize="15dp"
                android:textStyle="bold"
                android:text="4. Dua rakaat sebelum shalat Maghrib (Qobliyah Maghrib)."/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:textColor="#FFF"
                android:textSize="15dp"
                android:textStyle="bold"
                android:text="5. Dua rakaat sebelum Shalat Isya."/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="20dp"
                android:textColor="#f8d44c"
                android:textSize="15dp"
                android:textStyle="bold"
                android:text="Waktu Mengerjakan Shalat Rawatib"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:textColor="#FFF"
                android:textSize="15dp"
                android:textStyle="bold"
                android:text="Adapun mengenai waktu untuk mengerjakannya ialah mengiringi waktu shalat masing-masing, misalnya shalat Qobliyah Shubuh dikerjakan sebelum mengerjakan shalat Shubuh, shalat Qobliyah Dzuhur dikerjakan sebelum shalat Dzuhur, Ba’diyah Dzuhur dikerjakan sesudah shalat Dzuhur, Qobliyah Ashar dikerjakan sebelum shalat Ashar, Qobliyah Maghrib dikerjakan sebelum shalat Maghrib, Ba’diyah Maghrib dikerjakan sesudah shalat Maghrib, Qobliyah Isya dikerjakan sebelum shalat Isya dan Ba’diyah Isya dikerjakan sesudah shalat Isya."/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="20dp"
                android:textColor="#f8d44c"
                android:textSize="15dp"
                android:textStyle="bold"
                android:text="Cara Shalat Sunnah Rawatib"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:textColor="#FFF"
                android:textSize="15dp"
                android:textStyle="bold"
                android:text="Sedangkan cara mengerjakan shalat Rawatib itu sama dengan shalat sunnah yang lain hanya saja yang berbeda ialah lafazd niatnya."/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="20dp"
                android:textColor="#f8d44c"
                android:textSize="15dp"
                android:textStyle="bold"
                android:text="Niat Sholat Sunnah Qobliyah dan Ba'diyah (Sholat Rawatib)"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:textColor="#f8d44c"
                android:textSize="15dp"
                android:textStyle="bold"
                android:text=" Niat Sholat Sunnah Qobliyyah Subuh (2 Raka'at) :"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:textColor="#FFF"
                android:textSize="30sp"
                android:textStyle="bold"
                android:text=" اُصَلِّى سُنَّةَ الصُّبْحِ رَكْعَتَيْنِ قَبْلِيَّةً مُسْتَقْبِلَ الْقِبْلَةِ   ِللهِ تَعَالَى "/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="15dp"
                android:textColor="#FFF"
                android:textSize="15dp"
                android:textStyle="bold"
                android:text=" USHOLLI SUNNATASH-SHUBHI ROK'ATAINI QOBLIYYATAN MUSTAQBILAL QIBLATI  LILLAAHI TA'AALA."/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:textColor="#FFF"
                android:textSize="15dp"
                android:textStyle="bold"
                android:text="Artinya :
Aku niat melakukan shalat sunat sebelum subuh 2 rakaat, sambil menghadap qiblat  karena Allah ta'ala."/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="20dp"
                android:textColor="#f8d44c"
                android:textSize="15dp"
                android:textStyle="bold"
                android:text=" Niat Sholat Sunnah Qobliyyah Dzuhur (2 Raka'at) :"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:textColor="#FFF"
                android:textSize="30sp"
                android:textStyle="bold"
                android:text=" اُصَلِّى سُنَّةً الظُّهْرِرَكْعَتَيْنِ قَبْلِيَّةً مُسْتَقْبِلَ الْقِبْلَةِ   ِللهِ تَعَالَى "/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="15dp"
                android:textColor="#FFF"
                android:textSize="15dp"
                android:textStyle="bold"
                android:text=" USHOLLI SUNNATAZH-ZHUHRI ROK'ATAINI QOBLIYYATAN MUSTAQBILAL QIBLATI   LILLAAHI TA'AALA."/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:textColor="#FFF"
                android:textSize="15dp"
                android:textStyle="bold"
                android:text="Artinya :
Aku niat melakukan shalat sunat sebelum dzuhur 2 rakaat, sambil menghadap qiblat karena Allah ta'ala."/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="20dp"
                android:textColor="#f8d44c"
                android:textSize="15dp"
                android:textStyle="bold"
                android:text=" Niat Sholat Sunnah Ba'diyyah Dzuhur (2 Raka'at) :"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:textColor="#FFF"
                android:textSize="30sp"
                android:textStyle="bold"
                android:text=" اُصَلِّى سُنَّةً الظُّهْرِرَكْعَتَيْنِ بَعْدِيَّةً مُسْتَقْبِلَ الْقِبْلَةِ   ِللهِ تَعَالَى "/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="15dp"
                android:textColor="#FFF"
                android:textSize="15dp"
                android:textStyle="bold"
                android:text=" USHOLLI SUNNATAZH-ZHUHRI ROK'ATAINI BA'DIYYATAN MUSTAQBILAL QIBLATI   LILLAAHI TA'AALA."/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:textColor="#FFF"
                android:textSize="15dp"
                android:textStyle="bold"
                android:text="Artinya :
Aku niat melakukan shalat sunat setelah dzuhur 2 rakaat, sambil menghadap qiblat, karena Allah ta'ala."/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="20dp"
                android:textColor="#f8d44c"
                android:textSize="15dp"
                android:textStyle="bold"
                android:text=" Niat Sholat Sunnah Ba'diyyah Maghrib (2 Raka'at) :"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:textColor="#FFF"
                android:textSize="30sp"
                android:textStyle="bold"
                android:text=" اُصَلِّى سُنَّةً الْمَغْرِبِ رَكْعَتَيْنِ بَعْدِيَّةً مُسْتَقْبِلَ الْقِبْلَةِ   ِللهِ تَعَالَى"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="15dp"
                android:textColor="#FFF"
                android:textSize="15dp"
                android:textStyle="bold"
                android:text=" USHOLLI SUNNATAL MAGHRIBI ROK'ATAINI BA'DIYYATAN MUSTAQBILAL QIBLATI   LILLAAHI TA'AALA."/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:textColor="#FFF"
                android:textSize="15dp"
                android:textStyle="bold"
                android:text="Artinya :
Aku niat melakukan shalat sunat setelah maghrib 2 rakaat, sambil menghadap qiblat, karena Allah ta'ala."/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="20dp"
                android:textColor="#f8d44c"
                android:textSize="15dp"
                android:textStyle="bold"
                android:text=" Niat Sholat Sunnah Ba'diyyah 'Isya (2 Raka'at) :"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:textColor="#FFF"
                android:textSize="30sp"
                android:textStyle="bold"
                android:text=" اُصَلِّى سُنَّةً الْعِشَاءِ رَكْعَتَيْنِ بَعْدِيَّةً مُسْتَقْبِلَ الْقِبْلَةِ   ِللهِ تَعَالَى "/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="15dp"
                android:textColor="#FFF"
                android:textSize="15dp"
                android:textStyle="bold"
                android:text=" USHOLLI SUNNATAL 'ISYAA'I ROK'ATAINI BA'DIYYATAN MUSTAQBILAL QIBLATI   LILLAAHI TA'AALA."/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:textColor="#FFF"
                android:textSize="15dp"
                android:textStyle="bold"
                android:text="Artinya :
Aku niat melakukan shalat sunat setelah 'isya 2 rakaat, sambil menghadap qiblat,   karena Allah ta'ala."/>

        </LinearLayout>
    </ScrollView>


</android.support.constraint.ConstraintLayout>